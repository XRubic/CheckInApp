<Application x:Class="ClockIn.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Custom Colors -->
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#5E35B1"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#673AB7"/>
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#D1C4E9"/>
            <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#76FF03"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#212121"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#757575"/>
            <SolidColorBrush x:Key="DividerBrush" Color="#BDBDBD"/>
            <SolidColorBrush x:Key="White" Color="White"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>